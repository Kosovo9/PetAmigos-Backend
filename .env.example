# ========================================
# PetMatch Global - Environment Variables
# ========================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control!

# ========================================
# DATABASE CONFIGURATION
# ========================================
# MySQL connection string
# Format: mysql://username:password@host:port/database
# Production: Use PlanetScale, Railway, or AWS RDS
DATABASE_URL="mysql://root:password@localhost:3306/petmatch"

# ========================================
# SERVER CONFIGURATION
# ========================================
# Port for the Express server
PORT=3000

# Environment: development | production | test
NODE_ENV=development

# ========================================
# AUTHENTICATION & SECURITY
# ========================================
# Secret key for JWT tokens (min 32 characters in production)
JWT_SECRET="local-secret-change-in-production-min-32-chars"

# OAuth server URL (your deployed backend URL)
OAUTH_SERVER_URL="http://localhost:3000"

# Owner Open ID
OWNER_OPEN_ID="owner"

# ========================================
# APPLICATION CONFIGURATION
# ========================================
# Application ID
VITE_APP_ID="local"

# Built-in Forge API URL
BUILT_IN_FORGE_API_URL="http://localhost:3000"

# Built-in Forge API Key
BUILT_IN_FORGE_API_KEY="local"

# ========================================
# AWS S3 CONFIGURATION (Optional)
# ========================================
# For image uploads and storage
# AWS_ACCESS_KEY_ID="your-access-key-id"
# AWS_SECRET_ACCESS_KEY="your-secret-access-key"
# AWS_REGION="us-east-1"
# AWS_S3_BUCKET="petmatch-images"

# ========================================
# GOOGLE MAPS API (Optional)
# ========================================
# For geolocation features
# VITE_GOOGLE_MAPS_API_KEY="your-google-maps-api-key"

# ========================================
# ANALYTICS (Optional)
# ========================================
# Umami Analytics or similar
# VITE_ANALYTICS_ENDPOINT="https://analytics.umami.is"
# VITE_ANALYTICS_WEBSITE_ID="your-website-id"

# ========================================
# EMAIL SERVICE (Optional)
# ========================================
# For notifications and transactional emails
# SMTP_HOST="smtp.gmail.com"
# SMTP_PORT=587
# SMTP_USER="your-email@gmail.com"
# SMTP_PASSWORD="your-app-password"
# EMAIL_FROM="noreply@petmatch.com"

# ========================================
# PAYMENT PROCESSING (Optional)
# ========================================
# Stripe for payments
# STRIPE_PUBLIC_KEY="pk_test_..."
# STRIPE_SECRET_KEY="sk_test_..."
# STRIPE_WEBHOOK_SECRET="whsec_..."

# ========================================
# SOCIAL AUTH (Optional)
# ========================================
# Google OAuth
# GOOGLE_CLIENT_ID="your-client-id"
# GOOGLE_CLIENT_SECRET="your-client-secret"

# Facebook OAuth
# FACEBOOK_APP_ID="your-app-id"
# FACEBOOK_APP_SECRET="your-app-secret"

# ========================================
# REDIS (Optional)
# ========================================
# For caching and session management
# REDIS_URL="redis://localhost:6379"

# ========================================
# SENTRY (Optional)
# ========================================
# For error tracking
# SENTRY_DSN="https://your-sentry-dsn"

# ========================================
# RATE LIMITING (Optional)
# ========================================
# RATE_LIMIT_WINDOW_MS=900000
# RATE_LIMIT_MAX_REQUESTS=100

# ========================================
# CORS CONFIGURATION (Optional)
# ========================================
# Comma-separated list of allowed origins
# CORS_ORIGINS="http://localhost:5173,https://petmatch.netlify.app"

# ========================================
# PRODUCTION NOTES
# ========================================
# 
# For Netlify deployment, set these in:
# Site Settings → Environment Variables
#
# For Render deployment, set these in:
# Environment → Environment Variables
#
# IMPORTANT: Never commit sensitive values to Git!
# Use strong, unique values for JWT_SECRET in production
# Use HTTPS URLs for all production services
