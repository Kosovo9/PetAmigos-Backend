# ========================================
# PETMATCH - ENVIRONMENT VARIABLES
# Open Source Stack - Zero Stripe Dependencies
# ========================================

# === CORE SETTINGS ===
NODE_ENV=production
PORT=10000

# === DATABASE ===
MONGODB_URI=your_mongodb_connection_string_here

# === JWT AUTHENTICATION ===
JWT_SECRET=your_super_secret_jwt_key_here_minimum_32_chars

# === FRONTEND URL ===
FRONTEND_URL=https://petplaydate.netlify.app
BACKEND_URL=https://petamigos-backend.onrender.com

# === PAYMENT GATEWAYS (NO STRIPE) ===
# Mercado Pago (LATAM)
MP_ACCESS_TOKEN=APP_USR-your_mercadopago_access_token_here

# PayPal (Global)
PAYPAL_CLIENT_ID=your_paypal_client_id_here
PAYPAL_SECRET=your_paypal_secret_here

# === AI SERVICES (OPEN SOURCE) ===
# Hugging Face (Free tier available)
HUGGINGFACE_API_KEY=hf_your_huggingface_api_key_here

# Google Gemini (for existing AI features)
GEMINI_API_KEY=your_gemini_api_key_here

# === EMAIL SERVICE ===
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_gmail_app_password_here

# === CLOUDINARY (Image hosting) ===
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# === OPTIONAL SERVICES ===
# Supabase (if using)
SUPABASE_URL=your_supabase_url
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# === CLIENT-SIDE ENV (Next.js) ===
# These should be set in Netlify dashboard:
# NEXT_PUBLIC_API_URL=https://petamigos-backend.onrender.com/api
# NEXT_PUBLIC_MP_PUBLIC_KEY=APP_USR-your_mercadopago_public_key
# NEXT_PUBLIC_PAYPAL_CLIENT_ID=your_paypal_client_id
# NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
