S3_BUCKET="petmatch-media"

# --- ANALYTICS ---
VITE_ANALYTICS_ENDPOINT="https://analytics.yourdomain.com"
VITE_ANALYTICS_WEBSITE_ID="UUID_FROM_UMAMI_OR_GA"

# --- PAYMENTS ---
